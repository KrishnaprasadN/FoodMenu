<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/categorylistfragment"
        android:name="com.app.foodmenu.fragments.CategoryListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        app:layout_widthPercent="25%" />

    <fragment
        android:id="@+id/itemlistfragment"
        class="com.app.foodmenu.fragments.ItemListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/categorylistfragment"
        app:layout_widthPercent="50%" />


    <fragment
        android:id="@+id/orderfragment"
        class="com.app.foodmenu.fragments.OrderFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/itemlistfragment"
        app:layout_widthPercent="25%" />
</android.support.percent.PercentRelativeLayout>
